<html lang='en'>
  <head>
    <meta charset='utf-8' />
    <meta name='viewport' content='width=device-width, initial-scale=1' />
    <link
      href='https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css'
      rel='stylesheet'
      integrity='sha384-rbsA2VBKQhggwzxH7pPCaAqO46MgnOM80zW1RWuH61DGLwZJEdK2Kadq2F9CUG65'
      crossorigin='anonymous'
    />
    <style>
    .border-black {
      .tr{
        border: 1px solid black;
      }
      .th{
        border: 1px solid black;
        }
      }
  </style>

  </head>
  <body>
    <h1>Muzaffar & Sons By New Lucky Traders</h1>
    <div class='card'>
      <div class='card-body'>
        <strong>Expense</strong>

        <table class='table table-bordered'>
          <thead>
            <tr class='table-active'>
              <th scope='col'>#</th>
              <th scope='col'>Expense</th>
              <th scope='col'>Amount</th>
            </tr>
          </thead>
          <tbody>
            {{#each expenses}}
              <tr>
                <th scope='row'>{{@index}}</th>
                <td>{{description}}</td>
                <td>{{amount}}</td>
              </tr>
            {{/each}}

            {{#ifCond expenses.length '===' 0}}
              <tr>
                <td colspan='3'>No expenses found.</td>
              </tr>
            {{/ifCond}}
          </tbody>
          {{#ifCond expenses.length '>' 0}}
            <tfoot>
              <tr>
                <th scope='row'></th>
                <td></td>
                <td><strong>Total: {{expenseSum}}</strong></td>
              </tr>
            </tfoot>
          {{/ifCond}}
        </table>

        <div style='page-break-before: always;'></div>

        <strong>Sales</strong>

        <table class='table table-bordered'>
          <thead>
            <tr class='bg-primary text-white'>
              <th scope='col'>Items</th>
              <th scope='col'>Sales Qty</th>
              <th scope='col'>Sales Amount</th>
              <td scope='col'>Avg Sale Price/Sheet</td>
              <td scope='col'>Total Cost(Buying Cost)</td>
              <td scope='col'>Avg Cost/Sheet</td>
              <td scope='col'>Gross Margin</td>
              <td scope='col'>Gross Margin %</td>
            </tr>
          </thead>
          <tbody>
            {{#each sales}}
              <tr>
                <td>{{name}}</td>
                <td>{{quantitySold}}</td>
                <td>{{salesAmount}}</td>
                <td>{{salesAverage}}</td>
                <td>{{buyingCost}}</td>
                <td>{{buyingSalesAvg}}</td>
                <td>{{grossProfit}}</td>
                <td>{{grossProfitPercentage}}</td>
              </tr>
            {{/each}}
          </tbody>

          <tfoot>
            <tr class='bg-secondary text-white border-black'>
              <th scope='row'><strong>Total</strong></th>
              <td><strong>
                  {{productAggregates.quantitySold}}</strong></td>
              <td><strong>
                  {{productAggregates.salesAmount}}</strong></td>
              <td></td>
              <td><strong>{{productAggregates.buyingCost}}</strong></td>
              <td></td>
              <td><strong>
                  {{productAggregates.grossProfit}}
                </strong></td>
              <td></td>
            </tr>
          </tfoot>
        </table>

        <div style='page-break-before: always;'></div>

        <strong>Purchase Orders</strong>
        <br>
        {{#each pos}}
          <strong>{{name}}</strong>
          <table class='table table-bordered'>
            <thead>
              <tr class='table-active bg-primary text-white'>
                <th scope='col'>Product Name</th>
                <th scope='col'>Quantity</th>
                <th scope='col'>Buying Price</th>
              </tr>
            </thead>
            <tbody>
                {{#each orderlines}}
                <tr>
                  <td>{{name}}</td>
                  <td>{{quantity}}</td>
                  <td>{{unit_price}}</td>
                </tr>
              {{/each}}
            </tbody>
          </table>
        {{/each}}

        <div style='page-break-before: always;'></div>

        <strong>Customers</strong>

        <table class='table table-bordered'>
          <thead>
            <tr class='table-active'>
              <th scope='col'>#</th>
              <th scope='col'>Name</th>
              <th scope='col'>Amount</th>
              <th scope='col'>Type</th>
            </tr>
          </thead>
          <tbody>
            {{#each customerTransactions}}
              <tr>
                <th scope='row'>{{@index}}</th>
                <td>{{customer.name}}</td>
                <td>{{amount}}</td>
                <td>{{type}}</td>
              </tr>
            {{/each}}

          {{#ifCond customerTransactions.length '>' 0}}
            <tfoot>
              <tr>
                <th scope='row'></th>
                <td></td>
                <td><strong>Total: {{customerTransactionSum}}</strong></td>
                <td></td>
              </tr>
            </tfoot>
          {{/ifCond}}
        </table>

      </div>
    </div>
  </body
</html>
